>>>#zadatak iz google forms

x=2**3*3+6*2-2
y=7+5**2-20
print(x)
print(y)
print("x==y", x==y)
print("x!=y", x!=y)
print("x>y",x>y)
print("x<y",x<y)
print("x>=y",x>=y)
print("x<=y",x<=y)

a1 = x>10
a2 = x<20
print("x>10",a1)
print("x<20",a2)
print("x se nalazi u intervalu",a1 and a2)

b1=y>10
b2=y<20
print("y>10",b1)
print("y<20",b2)
print("y se nalazi u intervalu",b1 and b2)

